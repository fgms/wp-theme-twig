{% extends base_template %}
	{% if right|default(false) %}
	{% set class="right" %}
	{% set width=8 %}
	{% else %}
	{% set class="left" %}
	{% set width=9 %}
	{% endif %}
	{% block content %}	
		{# include 'partials/hero-snippet.html.twig' with { 'thisPage' : page , 'thisIndex' : page.find('/blog')} #}	
		<div class="modular sidebar-{{class}}">
			<div class="modular-row "  >
				<div class="modular-anchor" id="{{ page.slug() }}" data-scroll></div>
				<div class="container">
				{# if config.plugins.breadcrumbs.enabled %}{% include 'partials/breadcrumbs.html.twig' %}{% endif #}
				
					<div class="row">
						<div class="col-sm-{{width}}">
							<div class="column-wrapper">
								{# only show this if we are index page defined in partials/hero-snippet#}							
								{% block container %}
								{% endblock %}
								
							</div>
						</div>
						<div class="col-sm-{{12-width}}">
							{% include 'blog-sidebar.twig'  %}				
							
						</div>
					</div>
				</div>
			</div>
		</div>	
	{% endblock %}
	
