{% extends 'base.twig' %}
{% if right|default(false) %}
    {% set class="right" %}
    {% set width=8 %}
{% else %}
    {% set class="left" %}
    {% set width=9 %}
{% endif %}

{% block content %}	
    <div class="modular sidebar-{{class}}">
        <div class="modular-row "  >
            <div class="modular-anchor" id="{{ page.slug() }}" data-scroll></div>
            <div class="container">         
            
                <div class="row">
                    <div class="col-sm-{{width}}">
                        <div class="column-wrapper">
                        {% include 'breadcrumbs.twig' ignore missing only %}
                       
                        {% include "article.twig" with { "article" : post, "loop" : loop } %}
                        {% if post.children is defined %}
                        <ul style="list-style: none;" >
                            {% for child in post.children %}
                                {% include 'article-list-element.twig' with {'article' : child }   %}
                            {% endfor %}                            
                        </ul>
                        {% endif %}                        
                        </div>
                    </div>
                    <div class="col-sm-{{12-width}}">                       
                            {% include 'blog-sidebar.twig'  %}                            
                    </div>
                </div>
            </div>
        </div>
    </div>	
{% endblock %}