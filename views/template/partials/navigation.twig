<nav class="navbar  script-navigation" role="navigation">
        <div class="navbar-header">
			
            <a type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
				<div class="pull-left">Menu</div>
				<div class="pull-right" style="margin-top: 2px;">
					<span class="sr-only">Toggle Menu</span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>					
				</div>
				<div class="clearfix"></div>

            </a>
			{% if config.settings.header.logo is defined %}<a href="{{site.url|e('html_attr')}}" class="navbar-brand"><img data-image="{{config.settings.header.logo.url}}"></a>{% endif %}		
        </div>
        <div class="navbar-collapse collapse ">			
            <ul class="nav navbar-nav   ">
                {% for item in  menu.get_items  %}                   
                    {% if item.get_children %}
                        <li class="dropdown {{item.classes | join(' ')}}">
                            <a href="{{item.get_link|e('html_attr')}}" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{item.title|e}} <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">                                                            
                                {% for child in item.get_children %}                                   
                                    <li class="{{ current_child }} "><a href="{{ child.get_link }}">{{ child.title }}</a></li>
                                {% endfor %}
                            </ul>
                        </li>
                    {% else %}
                        <li class=""><a href="{{ item.get_link }}">{{ item.title }}</a></li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>

</nav>    


