<nav class="navbar   script-fixed-header-with-scroll " role="navigation">
    <div class="container ">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
			<a href="{{site.url|e('html_attr')}}" class="navbar-brand"><img data-image="{{config.settings.header.logo.url}}">
                <div>{{config.address.city}}, {{config.address.province}}</div>
                <div>{{config.phone.toll}} | {{config.phone.office}}</div>
            </a>		
        </div>
        <div class="navbar-collapse collapse">
			<div style="text-align:right"><a class="btn btn-primary" href="http://www.missioninnresort.com">Resort Website</a></div>
            <ul class="nav navbar-nav navbar-right">
                {% for item in  menu.get_items  %}                   
                    {% if item.get_children %}
                        <li class="dropdown {{item.classes | join(' ')}}">
                            <a href="{{item.get_link|e('html_attr')}}" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">{{item.title|e}} <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">                                                            
                                {% for child in item.get_children %}                                   
                                    <li class="{{ current_child }} "><a href="{{ child.get_link }}">{{ child.title }}</a></li>
                                {% endfor %}
                            </ul>
                        </li>
                    {% else %}
                        <li class=""><a href="{{ item.get_link }}">{{ item.title }}</a></li>
                    {% endif %}
                {% endfor %}
            </ul>
        </div>
    </div>
</nav>    


