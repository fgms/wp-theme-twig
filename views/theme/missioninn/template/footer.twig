<footer class="footer">
	
	<div class="container">
		
		<div class="row">
			
			<div class="col-md-8">
				
				{% if config.settings.footer.logo is defined %}
				<div class="footer-logo">
					
					<a href="{{site.url|e('html_attr')}}">
						<img class="img-responsive" data-image="{{config.settings.footer.logo.url|e('html_attr')}}" alt="{{config.settings.footer.logo.alt|e('html_attr')}}" />
					</a>
					
				</div>
				{% endif %}
				
				<div class="footer-text-wrapper">
					
					{% if config.tollfree is defined %}
					<div class="footer-tollfree">
						Toll-free: <span class="footer-tollfree-number">{{config.phone.toll|e}}</span>
					</div>
					{% endif %}
					
					<div class="footer-address">
						
						{% if config.address is defined %}
						{{config.address.street}}, {{config.address.city}}, {{config.address.province}}, {{config.address.country}} {{config.address.postal}}
						{% endif %}
						
						{% if config.privacy_policy is defined %}
						|	
						<a href="{{config.privacy_policy.url|e('html_attr')}}" rel="nofollow">Privacy Policy</a>
						{% endif %}
						
					</div>
					
				</div>
				
				{% if config.social is defined %}
				<div class="footer-social">
					
					<ul>
						
						{% if config.social.facebook is defined %}
						<li><a href="{{config.social.facebook.url|e('html_attr')}}" target="_blank" class="social-facebook"></a></li>
						{% endif %}
						
						{% if config.social.twitter is defined %}
						<li><a href="{{config.social.twitter.url|e('html_attr')}}" target="_blank" class="social-twitter"></a></li>
						{% endif %}
						
						{% if config.social.youtube is defined %}
						<li><a href="{{config.social.youtube.url|e('html_attr')}}" target="_blank" class="social-youtube"></a></li>
						{% endif %}
						
						{% if config.social.pinterest is defined %}
						<li><a href="{{config.social.pinterest.url|e('html_attr')}}" target="_blank" class="social-pinterest"></a></li>
						{% endif %}
						
						{% if config.social.flickr is defined %}
						<li><a href="{{config.social.flickr.url|e('html_attr')}}" target="_blank" class="social-flickr"></a></li>
						{% endif %}
						
						{% if config.social.instagram is defined %}
						<li><a href="{{config.social.instagram.url|e('html_attr')}}" target="_blank" class="social-instagram"></a></li>
						{% endif %}
						
						{% if config.social.rss is defined %}
						<li><a href="{{config.social.rss.url|e('html_attr')}}" target="_blank" class="social-rss"></a></li>
						{% endif %}
						
					</ul>
					
				</div>
				{% endif %}
				
				<div class="footer-nav"></div>
				
				<div class="footer-copyright hidden-xs hidden-sm">
				
					{% block copyright %}
					{% if config.settings.copyright is defined %}
					{% set year="now"|date("Y","UTC") %}
					&copy; Copyright
					{{config.settings.copyright.year|e}}{% if year!=config.settings.copyright.year %}-{{year|e}}{% endif %}
					|
					{% endif %}
					Site developed by Fifth Gear
					{% endblock %}
					
				</div>
				
			</div>
			
			<div class="col-md-4">
				
				{% if config.forms.footer.id is defined %}
				<h3>Quick Message</h3>				
				{{function('do_shortcode','[contact-form-7 id="'~config.forms.footer.id~'"]')}}
				{% endif %}
				
			</div>
			
		</div>
		
		<div class="row footer-copyright visible-xs visible-sm">
			<div class="col-md-12">{{block('copyright')}}</div>
		</div>
		
	</div>
	
</footer>

