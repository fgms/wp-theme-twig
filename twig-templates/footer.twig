<footer class="footer">	
	<div class="container">		
		<div class="row">
			<div class="{{config.settings.footer.grid.left.class | default('col-sm-6')}}">
				<div class="footer-content-wrapper left">
				{% if config.forms.footer.id is defined %}
					{% filter shortcodes %}[contact-form-7 id="{{config.forms.footer.id}}" ]{% endfilter %}
				{% else %}
					<ul class="widget-section">
						{{widget_footer_sidebar_left}}
					</ul>
				{% endif %}
					
				</div>				
			</div>			
			<div class="{{config.settings.footer.grid.right.class | default('col-sm-6')}}">
				<div class="footer-content-wrapper right">
					{% if config.settings.footer.logo is defined %}
					<div class="footer-logo">					
						<a href="{{site.url|e('html_attr')}}">
							<img class="img-responsive" data-image="{{theme.link}}{{config.settings.footer.logo.url|e('html_attr')}}" alt="{{config.settings.footer.logo.alt|e('html_attr')}}" />
						</a>					
					</div>
					{% endif %}
					<ul class="widget-section">
						{{widget_footer_sidebar_right}}
					</ul>
					<div class="footer-text-wrapper">
						{% if config.phone.toll is defined %}			<div>{{__('Toll free', 'fgms' ) }}: <span>{{config.phone.toll|e}}</span></div>				{% endif %}
						{% if config.phone.reservations is defined %}	<div>{{__('Reservations', 'fgms' ) }}: <span>{{config.phone.reservations|e}}</span></div>	{% endif %}
						{% if config.phone.reception is defined %}		<div>{{__('Reception', 'fgms' ) }}: <span>{{config.phone.reception|e}}</span></div>		{% endif %}	
						{% if config.phone.resort is defined %}			<div>{{__('Resort', 'fgms' ) }}: <span>{{config.phone.resort|e}}</span></div>				{% endif %}						
						{% if config.phone.office is defined %}			<div>{{__('Office', 'fgms' ) }}: <span>{{config.phone.office|e}}</span></div>				{% endif %}
						{% if config.phone.fax is defined %}			<div>{{__('Fax', 'fgms' ) }}: <span>{{config.phone.fax|e}}</span></div>						{% endif %}			
						
						{% if config.email.info is defined %}			<div><span>{{function('do_shortcode','[email]'~config.email.info~'[/email]')}}</span></div>	{% endif %}
						
						{# 
						<div class="footer-address">						
							{% if config.address is defined %}
							{{config.address.street}}, {{config.address.city}}, {{config.address.province}}, {{config.address.country}} {{config.address.postal}}
							{% endif %}						
							{% if config.privacy_policy is defined %} |	<a href="{{config.privacy_policy.url|e('html_attr')}}" rel="nofollow">Privacy Policy</a>{% endif %}						
						</div>
						#}
						
					</div>
					
					{# this is defined by settings.yaml file, and loops through all social #}
					{% if config.social is defined  %}
						{% if config.settings.footer.social.enable %}
						<div class="social-icons">							
								{% for social in config.social %}								
									{% if social.url is defined and social.url %}								
										<a href="{{social.url|e('html_attr')}}" target="_blank">
											{% if social.icon.outer is defined  %}
											<span class="fa-stack fa-lg ">
												<i class="fa {{social.icon.outer | default('fa-square-o')}} fa-stack-2x icon-outer"></i>
												<i class="fa {{social.icon.inner | default('fa-question-circle') }} fa-stack-1x icon-inner"></i>
											</span>
											{% else %}
												<i class="fa {{social.icon.inner | default('fa-question-circle') }} icon-inner" aria-hidden="true"></i>
											{% endif %}									
										</a>															
									{% endif %}							
								{% endfor %}						
						</div>
						{% endif %}
					{% endif %}
				</div>				
			</div>			
		</div>
		
		<div class="row">
			<div class="{{config.settings.copyright.grid.left.class | default('col-sm-6')}}">
				<div class="footer-content-wrapper left">
					<div class="footer-terms">
						{% if config.postid.terms is defined %}<a href="/ajax/?postid={{config.postid.terms}}" data-toggle="modal" data-target="#general-modal" >Terms of Use</a>{% endif%}
						{% if config.postid.terms is defined and config.postid.privacy %} | {% endif%}
						{% if config.postid.privacy is defined %}<a href="/ajax/?postid={{config.postid.privacy}}" data-toggle="modal" data-target="#general-modal" >Privacy Statement</a>{% endif%}
						  
					</div>
				</div>
			</div>
			<div class="{{config.settings.copyright.grid.right.class | default('col-sm-6')}}">
				<div class="footer-content-wrapper right" >
					<div class="footer-copyright">
						{% if config.settings.copyright is defined %}
						{% set year="now"|date("Y","UTC") %}
						&copy; Copyright
						{{config.settings.copyright.year|e}}{% if year!=config.settings.copyright.year %}-{{year|e}}{% endif %}{% endif %}{{config.settings.copyright.text|e}}
					</div>
				</div>				
			</div>
		</div>		
	</div>	
</footer>