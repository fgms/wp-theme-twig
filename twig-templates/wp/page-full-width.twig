{% extends 'base.twig' %}	
{% block content %}	
<div class="modular">
	<div class="modular-row "  >
		<div class="modular-anchor" id="{{ page.slug() }}" data-scroll></div>
		<div class="container">
			<div class="row">
				<div class="{{config.settings.breadcrumb.grid.class | default('col-sm-12')}}">
					{% include 'breadcrumbs.twig' ignore missing only %}
				</div>
			</div>					
			<div class="row">
				<div class="col-sm-12">
					<div class="column-wrapper">													
						{% include "article.twig" with { "article" : post, "loop" : loop } %}												
					</div>
				</div>						
			</div>
		</div>
	</div>
</div>	
{% endblock %}