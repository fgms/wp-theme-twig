{% extends 'base.twig' %}
{% block content %}	
<div class="{{config.settings.page.class |default('')}} {% if config.settings.page.grid.right.class is defined %}sidebar{% endif %}">
	<div class="container">
		<div class="row">
			<div class="{{config.settings.page.grid.left.class | default('col-sm-12')}}">
				<div class="column-wrapper">
				{% include 'breadcrumbs.twig' ignore missing only %}
				{% for article in posts%}
					{% include "article.twig" with { "article" : article, "loop" : loop, "class" : "article-page-default" } only %}
				{% endfor %}				
				</div>
			</div>
			{% if config.settings.page.grid.right.class is defined %}
			<div class="{{config.settings.page.grid.right.class}}">                       
				<ul class="widget-section">
					{{widget_page_sidebar}}
				</ul>                              
			</div>
			{% endif %}
		</div>   
    </div>
</div>	
{% endblock %}