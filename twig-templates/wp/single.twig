{% extends 'base.twig' %}
{% block content %}
<div class="{{post.class}} {{config.settings.article.class |default('')}} {% if config.settings.article.grid.right.class is defined %}has-sidebar{% endif %}">
	<div class="container">
		<div class="row">
			<div class="{{config.settings.breadcrumb.grid.class | default('col-sm-12')}}">
				{% include 'breadcrumbs.twig' ignore missing only %}
			</div>
		</div>		
		<div class="row">
			<div class="{{config.settings.article.grid.left.class | default('col-sm-12')}}">
				<div class="column-wrapper">					
				{% include "article.twig" with { "article" : post, "loop" : loop, "class" : "article-page-default" } only %}								
				</div>
			</div>
			{% if config.settings.article.grid.right.class is defined %}
			<div class="{{config.settings.article.grid.right.class}}">
				<div id="sidebar">
					{% include 'blog-sidebar.twig' ignore missing %}
					<ul class="widget-section">
						{{widget_blog_sidebar}}
					</ul> 					
				</div>                              
			</div>
			{% endif %}
		</div>   
    </div>
</div>
{% endblock %}