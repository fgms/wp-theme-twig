{% extends 'base.twig' %}
{% block content %}	
<div class="modular sidebar">
    <div class="modular-row "  >
        <div class="modular-anchor" id="{{ page.slug() }}" data-scroll></div>
        <div class="container">
            <div class="row">
                <div class="{{config.settings.article.grid.class.left | default('col-sm-8')}}">
                    <div class="column-wrapper">
                    {% include 'breadcrumbs.twig' ignore missing only %}
					<h1>Blog</h1>
					<ul id="blog-articles">   
                    {% for article in posts%}
                        <li>{% include "article.twig" with { "article" : article, "loop" : loop, "class" : "article-index-default" } only %}</li>
                    {% endfor %}
					</ul>
                    
                    </div>
                </div>
                {% if config.settings.page.article.right is defined%}
                <div class="{{config.settings.article.grid.class.right}}">                       
                    <ul class="widget-section">
						{{widget_blog_sidebar}}
					</ul>                          
                </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>	
{% endblock %}