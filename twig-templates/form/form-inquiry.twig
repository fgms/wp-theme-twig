<div class="form-horizontal">
    <div class="form-group">
        <label class="control-label {{class_label}}">First Name</label>
        <div class="{{class_input}}">
            [text* first_name class:form-control ]
        </div>
    </div>
    <div class="form-group">
        <label class="control-label {{class_label}}">Last Name</label>
        <div class="{{class_input}}">
            [text last_name class:form-control ]
        </div>
    </div>
    <div class="form-group">
        <label class="control-label {{class_label}}">Email</label>
        <div class="{{class_input}}">
            [email* email class:form-control ]
        </div>
    </div>
    <div class="form-group">
        <label class="control-label {{class_label}}">Message</label>
        <div class="{{class_input}}">
            [textarea message class:form-control  ]
        </div>
    </div>
    <div class="form-group">[submit class:btn class:btn-primary "Send" ]</div> 
</div>