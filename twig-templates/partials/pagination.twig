{% if pagination.pages | length > 1 %}
<div class="pagination">    
    {% if pagination.prev %}
        <a href="{{pagination.prev.link}}" class="pagination-prev {{pagination.prev.link|length ? '' : 'invisible'}}">Prev</a>
    {% endif %}
    <ul class="pagination-pages">
        {% for page in pagination.pages %}
            <li>
                {% if page.link %}
                    <a href="{{page.link}}" class="{{page.class}}">{{page.title}}</a>
                {% else %}
                    <span class="{{page.class}}">{{page.title}}</span>
                {% endif %}
            </li>
        {% endfor %}
    </ul>
    {% if pagination.next %}
        <a href="{{pagination.next.link}}" class="pagination-next {{pagination.next.link|length ? '' : 'invisible'}}">Next</a>
    {% endif %}
</div>
{% endif %}