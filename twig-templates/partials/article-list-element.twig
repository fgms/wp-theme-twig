{% set image = article.thumbnail.src %}
{% if article.content | length > 0  or true %}
    {% set link = article.link %}
{% endif %}

<li class="row index-wrapper script-clone-wrapper">
	{% if article.get_thumbnail.src %}	
	<div class="index-image-wrapper col-sm-4">
		<div class="index-heading h3 visible-block-xs hidden-sm hidden-md hidden-lg">{% if link is defined %}<a href="javascript:void(0)" class="script-clone" >{{article.title}}</a>{% else %}{{article.title}}{% endif %}</div>
        {% if link is defined %}<a href="javascript:void(0);" class="script-clone" >{% endif %}		
			<img data-image="{{image}}" style="max-width: 90%" alt="{{article.title}}" />
			<noscript><img src="{{image}}" class="img-responsive" style="" alt="{{article.title}}" /></noscript>
		{% if link is defined %}</a>{% endif %}	    
	    
	</div>
	{% endif %}
	
	<div class="{% if article.get_thumbnail.src %}col-sm-8{% else %}col-sm-12{% endif %} index-content-wrapper">
		<h3 class="index-heading hidden-xs">{% if link is defined %}<a href="javascript:void(0)" class="script-clone" >{{article.title}}</a>{% else %}{{article.title}}{% endif %}</h3>	
			
		<div class="index-excerpt">{% if article.post_excerpt | length > 50 %}{{article.post_excerpt}}{% else %}{{article.content| striptags| truncate(35) }}{% endif %}</div>
		<div class="index-button">
		    {% if link is defined %}<a href="{{link}}" class="btn btn-primary script-clone-trigger">More Details</a>{% endif %}		    
		</div>
	</div> 
	<div class="clearfix" style="clear: both"></div>
</li>